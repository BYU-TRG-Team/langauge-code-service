#!/bin/bash

SCRIPT_DIR=$(dirname -- "$( readlink -f -- "$0"; )")
readonly SCRIPT_DIR
PACKAGE_DIR=$(realpath "${SCRIPT_DIR}/..")
readonly PACKAGE_DIR
LANG_REGISTRY=$(npm run --prefix "${PACKAGE_DIR}" language-registry:fetch)
readonly LANG_REGISTRY
declare -r CACHE_FILE="${PACKAGE_DIR}"/src/data.ts
TIMESTAMP=$(date -u)
readonly TIMESTAMP

cat << EOF > "${CACHE_FILE}"
import { Language } from "@typings";

// ${TIMESTAMP}
export const languageRegistry: Language[] = ${LANG_REGISTRY};
EOF