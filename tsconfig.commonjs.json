{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS", 
    "resolveJsonModule": true,
    "sourceMap": true, 
    "outDir": "./commonjs", 
    "strict": true, 
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "declaration": true,  
  },
  "include": [
    "src/**/*"
  ]
}